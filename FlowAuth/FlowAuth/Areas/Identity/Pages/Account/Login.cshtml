@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = null;
}

<style>

    body {
        background-image: linear-gradient(to right, rgb(19,141,205), rgb(0, 91, 151));
        color: #FFFFFF;
        font-family: "Roboto", helvetica, arial, sans-serif;
        font-size: 14px;
        font-weight: 400;
        text-rendering: optimizeLegibility;
        justify-content: center;
        position: center;
        text-align: center;
    }




    button {
        background-color: white;
        color: midnightblue;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    link {
        text-decoration-line: none;
    }

    button:hover {
        background-color: hotpink;
    }

    /* Add a background color and some padding around the form */


</style>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>

<div class="row" style="align-self:center;">
    <div class="col-md-4" style="align-self:center;">
        <section>
            <form method="post">
                <div style="background-color:rgba(0, 0, 0, 0.76); padding:10px 20px 20px 20px; top:200px; left:450px; border-radius: 10px; position:absolute; align-self:center">
                    <div class="logo" style="align-self:center;">
                        <img src="https://d2bkbw.am.files.1drv.com/y4p17U7c9u4Rwx25M-a4bJ8Ys4LE_ityeCJH1GYprmgKfQb12TMGbnbOQe54kxdSCfyi4RZp0ilYzdH4FG0d1iV8wbDLv8zfXiy-VrvjtjlwajXqRcmPhLqxv0xesSnnSmVaVwcmISVxp5pTVUt5DaZJ6iDH98zj74SSY1rH-jiSOCCT8tmWdH6WtLro49WJLJD_xhvE-cvdAvXUUj1NpleVA/Flow%20Logo.png?psid=1" alt="Flow ERP Logo" width=200 height=64 />
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group" style="align-self:center;display: inline-block">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Email" style="border-radius:2px;background-color: white; color:black;padding: 6px;
                                   border: none;
                                   margin-top: 8px;
                                   margin-right: 16px;
                                   font-size: 17px;" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="align-self:center;display: inline-block">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Password" style="border-radius:2px;background-color: white; color:black;padding: 6px;
                            border: none;
                            margin-top: 8px;
                            margin-right: 16px;
                            font-size: 17px;" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="align-self:center;display: inline-block">
                        <button type="submit" class="btn btn-default" asp-route-id="Input.">Log in</button>
                    </div>
                    <div class="form-group" style="padding-top:25px">
                        <div class="checkbox" style="align-self:center;display: inline-block">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                    <div class="form-group" style="align-self:center;display: inline-block">
                        <p>
                            <a asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

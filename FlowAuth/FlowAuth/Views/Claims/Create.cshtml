@model FlowAuth.Models.Claim

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Claim</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Claim_amount" class="control-label"></label>
                <input asp-for="Claim_amount" class="form-control" />
                <span asp-validation-for="Claim_amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Claim_description" class="control-label"></label>
                <input asp-for="Claim_description" class="form-control" />
                <span asp-validation-for="Claim_description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Claim_status" class="control-label"></label>
                <input asp-for="Claim_status" class="form-control" value="Pending"/>
                <span asp-validation-for="Claim_status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Claim_date" class="control-label"></label>
                <input asp-for="Claim_date" class="form-control" />
                <span asp-validation-for="Claim_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffID" class="control-label"></label>
                <select asp-for="StaffID" class ="form-control" asp-items="ViewBag.StaffID"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" value="" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

